{
  "name": "tbgs/email-service-php",
  "description": "TBGS Email Service - Reliable PHP standalone backend with file processing",
  "version": "3.0.0",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "phpmailer/phpmailer": "^6.8",
    "vlucas/phpdotenv": "^5.5",
    "respect/validation": "^2.2",
    "guzzlehttp/guzzle": "^7.8",
    "league/flysystem": "^3.15",
    "intervention/image": "^2.7",
    "ext-json": "*",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-zip": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "TBGS\\EmailService\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TBGS\\EmailService\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": [
      "php -S 0.0.0.0:8000 -t public index.php"
    ],
    "analyze": "phpstan analyse src",
    "check-style": "phpcs --standard=PSR12 src",
    "fix-style": "phpcbf --standard=PSR12 src"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "keywords": [
    "email",
    "contact-form",
    "backend",
    "tbgs",
    "file-processing",
    "docker",
    "standalone",
    "php"
  ],
  "authors": [
    {
      "name": "TBGS B.V.",
      "email": "tech@tbgs.nl",
      "homepage": "https://tbgs.nl"
    }
  ],
  "homepage": "https://tbgs.nl",
  "license": "MIT"
}