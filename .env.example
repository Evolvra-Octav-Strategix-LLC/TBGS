# TBGS Production Environment Variables for VPS Deployment
# Copy this file to .env and fill in your actual values

# Application Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Replace with your VPS PostgreSQL details)
DATABASE_URL=postgresql://tbgs_user:your_secure_password@localhost:5432/tbgs_production


# Application Secrets
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here

# Email Configuration (Gmail SMTP)
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# API Keys
GOOGLE_PLACES_API_KEY=your_google_places_api_key
GRIPP_API_TOKEN=your_gripp_api_token
SENDGRID_API_KEY=your_sendgrid_api_key

# pgAdmin Configuration
PGADMIN_EMAIL=admin@tbgs.nl
PGADMIN_PASSWORD=your_pgadmin_password_here

# Nextcloud Configuration
NEXTCLOUD_DB_USER=nextcloud_user
NEXTCLOUD_DB_PASSWORD=your_nextcloud_db_password
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your_nextcloud_admin_password
NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.tbgs.nl,tbgs.nl
NEXTCLOUD_HOST=nextcloud.tbgs.nl

# Domain Configuration
DOMAIN_NAME=tbgs.nl
ADMIN_EMAIL=info@tbgs.nl