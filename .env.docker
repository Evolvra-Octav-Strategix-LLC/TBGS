# Docker Environment Configuration
# Ready for production deployment with your actual secrets

# Application
NODE_ENV=production
PORT=3000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tbgs_production
POSTGRES_USER=tbgs_user
POSTGRES_PASSWORD=TBGSSecure2024!Production
DATABASE_URL=postgresql://tbgs_user:TBGSSecure2024!Production@postgres:5432/tbgs_production

# Redis
REDIS_URL=redis://redis:6379

# Email Service (Your existing Gmail SMTP - NO SendGrid needed)
GMAIL_USER=${GMAIL_USER}
GMAIL_APP_PASSWORD=${GMAIL_APP_PASSWORD}
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
MAIL_FROM=${GMAIL_USER}
MAIL_TO=${GMAIL_USER}

# Google Places API (Your existing key)
GOOGLE_PLACES_API_KEY=${GOOGLE_PLACES_API_KEY}

# Session Security
SESSION_SECRET=TBGSSecureSession2024!ProductionKey32CharactersLong

# URLs
FRONTEND_URL=https://tbgs.nl
BACKEND_URL=https://tbgs.nl

# Nextcloud Database
NEXTCLOUD_POSTGRES_DB=nextcloud
NEXTCLOUD_POSTGRES_USER=nextcloud_user
NEXTCLOUD_POSTGRES_PASSWORD=NextcloudSecure2024!

# Nextcloud Admin
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=TBGSNextcloudAdmin2024!

# SSL Email for Let's Encrypt
SSL_EMAIL=${GMAIL_USER}