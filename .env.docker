# Docker Environment Configuration
# Copy this to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=3000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tbgs_production
POSTGRES_USER=tbgs_user
POSTGRES_PASSWORD=change_this_strong_password
DATABASE_URL=postgresql://tbgs_user:change_this_strong_password@postgres:5432/tbgs_production

# Redis
REDIS_URL=redis://redis:6379

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Google Places API
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Session
SESSION_SECRET=your_very_long_random_session_secret_here_at_least_32_characters

# Gripp API (optional)
GRIPP_API_TOKEN=your_gripp_api_token_here

# URLs
FRONTEND_URL=https://tbgs.nl
BACKEND_URL=https://tbgs.nl

# Nextcloud Database
NEXTCLOUD_POSTGRES_DB=nextcloud
NEXTCLOUD_POSTGRES_USER=nextcloud_user
NEXTCLOUD_POSTGRES_PASSWORD=change_this_nextcloud_password

# Nextcloud Admin
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=change_this_admin_password

# SSL Email for Let's Encrypt
SSL_EMAIL=your-email@tbgs.nl